<div class="container">
  <div class="row">

 
<div class="col s12">
        <h2>Your feed</h2>
        {{#if allNews}}
        {{#each allNews}}
        <div class="col s12 small-profile">
        <div class="row valign-wrapper">
          <div class="col s4 small-img">
            <img class="circle" src={{this.userImage}}>
          </div>
          <div class="col s4">
            <div class="rec-Users-info center-align">
              <a class="nameOfUser" href="/profile/{{this.owner}}">
                <p>{{this.userName}}</p>
              </a>
              <p class="results-username">@{{this.userUserName}}</p>
            </div>
          </div>
          </div>
        </div>
        <div class="row">
          {{!-- {{> newsPartial}} --}}
          <div class="col s12">
            <div class="card newCard">
              <div class="card-image">
                <img src="{{this.picture}}">
              </div>
              <div class="card-content center-align">
                <div class="row">
                  <div class="col s12">
                    <h5 id="title-card-{{@index}}">{{this.title}}</h5>
                  </div>
                </div>
                <div class="row">
                  <div class="col s12">
                    <a href="#readmore-modal{{@index}}" class="waves-effect black btn-small modal-trigger">Read more</a>
                  </div>
                </div>

                <div id="{{@index}}" class="row like-comment-section">
                  <div class="col s6">
                    {{!-- {{#each likes}} --}}
                    {{!-- {{#ifCond this.user "==" user._id}} --}}
                   {{#if this.liked}}
                        <button class="btn social-buttons hide-if-overflow" onclick="toggleLike(this)"><i class="fas fa-thumbs-up"></i><span>{{this.likes.length}}<span class="hide-if-overflow"> likes</span></span></button>
                      {{else}}
                        <button class="btn social-buttons hide-if-overflow" onclick="toggleLike(this)"><i class="far fa-thumbs-up"></i><span>{{this.likes.length}} <span class="hide-if-overflow">likes</span></span></button>
                      {{/if}}  
                    {{!-- {{else}} --}}
                    {{!-- <button class="btn social-buttons"><i class="far fa-thumbs-up" onclick="toggleLike(this)"></i>36 likes</button> --}}
                    {{!-- {{/ifCond}}   --}}
                    {{!-- {{/each}}   --}}
                  </div>

                  <div class="col s6">
                    <button class="btn social-buttons hide-if-overflow" id="show-{{@index}}" onclick="showComments(this)"><i
                        class="far fa-comment-alt"></i><span>Comments</span></button>
                    <button class="btn social-buttons hide hide-if-overflow" id="hide-{{@index}}" onclick="hideComments(this)">Hide
                      comments</button>
                  </div>
                </div>

              </div>
              <div class="row comment-row hide" id="comments-section-{{@index}}">
                {{#each comments}}
                <div class="col s12">
                  <div id="whole-comment-{{this.id}}" class="row comment-div">
                    <div class="col s2 center-align">
                      <img class="circle comment-pictures" src="{{this.user.img}}" alt="user-img">
                    </div>

                    <div class="col s10 left-align">
                      <div class="row content-section">
                        <div class="col s12">
                          <span class="user-name-span">{{this.user.name}}</span>
                          <span>| {{formatRelative this.createdAt}}</span>
                        </div>
                      </div>
                      <div class="row content-section">
                        <div class="col s10">
                          <p>{{this.content}}</p>
                        </div>
                        {{#if isMine}}
                        <div class="col s2">
                          <a class="delete-comment" id="{{this.id}}" onclick="deleteComment(this)"><i class="fas fa-trash"></i></a>
                        </div>
                      {{/if}}
                      </div>
                    </div>
                  </div>
                </div>
                {{/each}}
              </div>

              <div class="row hide" id="comment-form-{{@index}}">
                <div id="{{@index}}" class="col s12 comment-form">
                  <input id="comment-input-{{@index}}" type="text" onclick="onSendComment(this)">
                  <button id="send-btn-{{@index}}" class="btn" onclick="postComment(this)">Send</button>
                </div>
              </div>
            </div>
            <div id="readmore-modal{{@index}}" class="modal newsmodals" tabindex="0">
              <div class="modal-content">
                <div class="center-align">
                  <h4>{{this.title}}</h4>
                </div>
                <hr>
                <br>
                <p class="description">{{this.description}}</p>
                <div class="right-align">
                  {{#if this.author}}
                  <h6>By: <span class="author">{{this.author}}</span></h6>
                  
                  {{/if}}
                  <h6>Date: <span class="date">{{this.articleDate}}</span></h6>
                </div>
                <div class="center-align">
                  <a class="waves-effect black btn-small link-article" href="{{this.articleUrl}}" target="_blank">
                    <h6>Link to Article</h6>
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>
        
        {{/each}}
        {{else}}
                <h3>Nothing to see here... Check back later!</h3>
        {{/if}}
      </div>
       </div>
</div>