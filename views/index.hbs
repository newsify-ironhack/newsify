<section id="heading">
  <div class="container">
    <div class="row text-row">
      <div class="col s12 center-align">
        <h1 id="newsify-text"></h1>
      </div>
    </div>
    <div class="row">
      <div class="col s12 center-align">
        <img id="header-logo" src="/images/logo-w:o-text.png">
      </div>
    </div>
  </div>
</section>
<section class="top-headliens-today">
<h2 class="center-align">Top Headlines Today</h2>
  <div class="carousel">
    {{#each allNews}}
    <a class="carousel-item" href="#{{@index}}!"><img src="{{this.urlToImage}}">
    
    <h6 class="center-align top-headlines">{{this.title}}</h6>
    </a>
    
    {{/each}}
    
  </div>
      
</section>
<section id="about-section">
  <div class="nav-container">
    <div class="row valign-wrapper">
      <div class="col s12 m12 l8">
        <h2 class="about-title">About </h2>
        <h2 id="newsify-about-section" class="about-title">Newsify</h2>
        <h4 class="about-tagline">News <span id="emphasis">YOU</span> Care About</h4>
        <p id="about-paragraph">Newsify is the world's largest social media platform for trending news important to you.
          Browse our trending articles about today's most important topics and add the relevant ones to your profile
          with a click of a button. You can also view other user profiles and see what matters to them!</p>
      </div>
      <div class="col l4 hide-on-med-and-down">
        <div class="row">
          <div class="col s6"><a href="#signup-modal" class="waves-effect black btn-large modal-trigger">Sign up</a></div>
          <div class="col s6"><a href="#login-modal" class="waves-effect black btn-large modal-trigger">Log in</a></div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col s12 m6 hide-on-large-only">
        <div class="row">
          <div class="col s6"><a href="#signup-modal" class="waves-effect black btn-large modal-trigger">Sign up</a></div>
          <div class="col s6"><a href="#login-modal" class="waves-effect black btn-large modal-trigger">Log in</a></div>
        </div>
      </div>
    </div>

    {{#if wrongEmailAndUsername}}
      <span class="toast red darken-4">
        Email and username already taken
      </span>
    {{/if}}  

    {{#if wrongUsername}}
      <span class="toast red darken-4">
        Username already taken
      </span>
    {{/if}}

    {{#if wrongEmail}}
      <span class="toast red darken-4">
        Email already taken
      </span>
    {{/if}}

    {{#if loginMessage}}
      <span class="toast red darken-4">
        {{loginMessage}}
      </span>
    {{/if}}

    {{#if error}}
      <span class="toast red darken-4">
        {{error}}
      </span>
    {{/if}}

    {{#if passSuccess}}
      <span class="toast green accent-3">
        Password changed succesfully
      </span>
    {{/if}}
  </div>
</section>